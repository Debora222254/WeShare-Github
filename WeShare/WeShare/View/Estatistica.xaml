<Page x:Class="WeShare.View.Estatistica"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeShare.View"
      mc:Ignorable="d" 
      Width="900" Height="500"
      Title="Estatistica">

    <Grid Background="White">
        <DockPanel Margin="7">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Button Name="btnGeral" Content="Geral" FontSize="20" Padding="20,5" Width="155" Background="{x:Null}" BorderBrush="#FF34CDF0" Foreground="#FF00758F" FontFamily="Segoe UI Semilight" Click="btnGeral_Click"/>
                <Button Name="btnCategoria" Content="Categoria" FontSize="20" Padding="20,5" Margin="5,0" Width="155" Background="{x:Null}" BorderBrush="#FF34CDF0" Foreground="#FF00758F" FontFamily="Segoe UI Semilight" Click="btnCategoria_Click"/>
                <Button Name="btnComunidade" Content="Comunidade" FontSize="20" Padding="20,5" Width="155" Background="{x:Null}" BorderBrush="#FF34CDF0" Foreground="#FF00758F" FontFamily="Segoe UI Semilight" Click="btnComunidade_Click"/>
            </StackPanel>
            <Frame Name="frameEstatisticas" Background="#FF91B9B6" NavigationUIVisibility="Hidden"  />
        </DockPanel>
    </Grid>
</Page>
